@model List<QuestDTO>

<div class="container">
    <div class="row">
        @foreach (var quest in Model)
        {
            <div class="col-lg-3 col-sm-4 col-sm-6 quest-block">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="~/images/quests/@quest.Images[0].Path" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@quest.Name</h5>
                                <p class="card-text">@quest.Description</p>
                                <p class="card-text"><small class="text-muted">Difficulty: </small>@quest.HardLevel</p>
                                <p class="card-text"><small class="text-muted">Scary: </small> @quest.FearLevel</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>